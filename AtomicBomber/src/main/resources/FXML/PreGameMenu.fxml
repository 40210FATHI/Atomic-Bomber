<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.pregameController"
            prefHeight="320.0" prefWidth="569.0">
    <center>
        <VBox alignment="CENTER" spacing="9">
            <Label alignment="CENTER" text="Want to see your username?"/>
            <Button alignment="CENTER" mnemonicParsing="false" text="Show username"
                    onMouseClicked="#showCurrentUsername" textFill="palevioletred"/>
            <Label alignment="CENTER" text="Want to see your avatar?"/>
            <Button alignment="CENTER" mnemonicParsing="false" text="Show avatar" onMouseClicked="#showAvatars"
                    textFill="palevioletred"/>
            <Label alignment="CENTER" text="Want to see start the game?"/>
            <Button alignment="CENTER" mnemonicParsing="false" text="Start new game" onMouseClicked="#startNewGame"
                    textFill="palevioletred"/>
            <HBox alignment="CENTER" spacing="30">
                <VBox spacing="9">
                    <Label alignment="CENTER" text="Want to see the ratings?"/>
                    <Button alignment="CENTER" mnemonicParsing="false" text="scoreTable"
                            onMouseClicked="#goToScoreTable" textFill="palevioletred"/>
                </VBox>
                <VBox spacing="9">
                    <Label alignment="CENTER" text="Want to see your profile?"/>
                    <Button alignment="CENTER" mnemonicParsing="false" text="profile menu" onMouseClicked="#goToProfile"
                            textFill="palevioletred"/>
                </VBox>
                <VBox spacing="9">
                    <Label alignment="CENTER" text="Want to go to setting menu?"/>
                    <Button alignment="CENTER" mnemonicParsing="false" text="setting" onMouseClicked="#goToSettingMenu"
                            textFill="palevioletred"/>
                </VBox>
                <VBox spacing="9">
                    <Label alignment="CENTER" text="Exit:"/>
                    <Button alignment="CENTER" mnemonicParsing="false" text="exit" onMouseClicked="#exit"
                            textFill="palevioletred"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>

