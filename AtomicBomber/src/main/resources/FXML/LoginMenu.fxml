<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.loginMenuController"
            prefHeight="320.0" prefWidth="569.0">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Register and Login"/>
            <TextField fx:id="username" maxWidth="300" alignment="CENTER" promptText="Write your username"/>
            <PasswordField fx:id="password" promptText="Password" maxWidth="300" alignment="CENTER"/>
            <Button mnemonicParsing="false" text="guest starts a game" onMouseClicked="#StartingForGuest"/>
            <HBox alignment="CENTER" spacing="10" maxWidth="200">
                <Button mnemonicParsing="false" text="Register" onMouseClicked="#register"/>
                <Button mnemonicParsing="false" text="Login" onMouseClicked="#login"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
